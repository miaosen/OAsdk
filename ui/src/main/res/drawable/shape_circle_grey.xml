<?xml version="1.0" encoding="UTF-8"?>
<!-- 顶部圆角 白色背景 无边框 长方体 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <stroke
                android:width="3dp"
                android:color="#1296db" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <stroke
                android:width="0.5dp"
                android:color="#1296db" />

        </shape>
    </item>

</selector>
