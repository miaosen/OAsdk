<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View style="@style/lineHorizontal"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_file"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/icon_attachment"/>

        <TextView
            android:id="@+id/tv_file"
            style="@style/tv_text"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_file"
            android:text="附件"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/add_local_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:background="@mipmap/icon_add"/>
        <ImageView
            android:id="@+id/btn_video"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/add_local_btn"
            android:src="@mipmap/icon_video"/>

        <ImageView
            android:id="@+id/btn_photo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/btn_video"
            android:src="@mipmap/icon_camera"/>

        <ImageView
            android:id="@+id/btn_voice"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/btn_photo"
            android:src="@mipmap/icon_microphone"/>
        <ImageView
            android:id="@+id/btn_sgin"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/btn_voice"
            android:src="@mipmap/icon_pen"/>


    </RelativeLayout>

    <View style="@style/lineHorizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <com.osui.view.FlowLayout
            android:id="@+id/flowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:numColumns="6"
            app:columnMargin="1dp"
            app:lineMargin="1dp">
        </com.osui.view.FlowLayout>
    </LinearLayout>

    <View
        style="@style/lineHorizontal" />

</LinearLayout>