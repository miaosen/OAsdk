<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:background="@color/black_op"
              android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/lLayout_bg"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/top_title_lLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:padding="10dp"
            android:orientation="horizontal"
        >
            <ImageView
                android:id="@+id/txt_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
            />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:text="提示"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/titile_line_top"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_lt" />

        <LinearLayout
            android:id="@+id/ln_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="left"
            android:orientation="vertical"
        >
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                style="@style/tv_text"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:id="@+id/titile_line_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_lt" />

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <!---->  <Button
            android:id="@+id/btn_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/blue"
            android:textSize="16sp" />

            <View
                android:id="@+id/line_inbtn"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/grey_lt" />

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/blue"
                android:textSize="16sp"
            />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>