<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="gzpykj.hzpqy">

    <!-- 数据读写权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 网络连接 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <!-- 系统弹窗权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <!-- 调用摄像头 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 调用媒体播放器 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />


    <!-- 摄像头 -->
    <uses-feature android:name="android.hardware.camera"/>
    <!-- 摄像头自动对焦 -->
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <!-- 闪光灯 -->
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <!-- 震动 -->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_hzpqy"
        android:label="@string/app_name"
        android:name="gzpykj.hzpqy.base.AppContext"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="gzpykj.hzpqy.LoginActivity"
        android:windowSoftInputMode="stateAlwaysHidden"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="zxing.CaptureActivity" />
        <activity
            android:name="gzpykj.hzpqy.MainActivity"
            android:screenOrientation="portrait"
        />
        <activity
            android:name="gzpykj.hzpqy.feed.FeedListActivity"
            android:screenOrientation="portrait"
        />
        <activity
            android:name="gzpykj.hzpqy.feed.FeedDeatailActivity"
            android:screenOrientation="portrait"
        />
    </application>

</manifest>