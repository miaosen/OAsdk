<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/ln_back"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/sel_btn"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@mipmap/icon_back04"
            />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="书签"
            style="@style/tv_title"
            android:textSize="18dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="60dp"
            android:layout_height="40dp"
            />
    </LinearLayout>
    <View
        style="@style/line_hz_grey_lt"/>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <LinearLayout
        android:id="@+id/ln_edit_tail"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="@color/blue"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ln_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/sel_btn"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/icon_file_delete" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ln_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/sel_btn"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">


            <ImageView
                android:id="@+id/img_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/icon_down" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_forward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/sel_btn"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">


            <ImageView
                android:id="@+id/img_forword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/icon_right" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/sel_btn"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/icon_menu" />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>