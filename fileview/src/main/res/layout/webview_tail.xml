<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_edit_tail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/ln_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/sel_btn"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">


        <ImageView
            android:id="@+id/img_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/icon_left" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_forward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:background="@drawable/sel_btn"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">


        <ImageView
            android:id="@+id/img_forword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/icon_right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/sel_btn"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/icon_menu" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/ln_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/sel_btn"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >



        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_border" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="1"
            />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ln_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/sel_btn"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/icon_home_page" />


    </LinearLayout>

</LinearLayout>