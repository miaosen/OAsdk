<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/shape_round_grey"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_scrollFlags="scroll|enterAlways">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ln_search_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <cn.oaui.view.RoundImageView
                    android:id="@+id/img_search_logo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/logo_baidu" />
            </LinearLayout>


            <EditText
                android:id="@+id/ed"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="3dp"
                android:editable="false"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/input_url"
                android:imeOptions="actionDone"
                android:inputType="textWebEmailAddress"
                android:maxLines="1"
                android:paddingRight="3dp"
                android:textColor="@color/text_color"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_web_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">


            <LinearLayout
                android:id="@+id/ln_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <cn.oaui.view.RoundImageView
                    android:id="@+id/web_logo"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_web" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/text_color"
                android:textSize="16dp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ln_go"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/sel_search_blue"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_go" />
    </LinearLayout>


</LinearLayout>