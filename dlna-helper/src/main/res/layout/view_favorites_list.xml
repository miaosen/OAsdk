<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ln_edit_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_book"
                    style="@style/btn_blue_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加收藏"
                />
                <TextView
                    android:id="@+id/tv_net"
                    style="@style/btn_blue_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="直接投屏"
                />

                <TextView
                    android:id="@+id/tv_import"
                    style="@style/btn_blue_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="导入文件"
                />
                <TextView
                    android:id="@+id/tv_validate"
                    style="@style/btn_blue_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="链接检测"
                />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_edit_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tv_checkall"
                    style="@style/btn_blue_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全  选"
                />

                <TextView
                    android:id="@+id/tv_reve_check"
                    style="@style/btn_blue_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="反  选"
                />
                <TextView
                    android:id="@+id/tv_delete"
                    style="@style/btn_blue_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="删  除"
                />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_edit"
            style="@style/btn_blue_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="编  辑"
        />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <cn.oaui.view.FlowLayout
            android:id="@+id/flowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
        >


    </cn.oaui.view.FlowLayout>

    </ScrollView>
</LinearLayout>