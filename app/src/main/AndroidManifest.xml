<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.oasdk">

    <!-- 数据读写权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- 网络连接 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <!-- 系统弹窗权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <!-- 调用摄像头 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 调用媒体播放器 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />



    <!-- 硬件依赖 -->
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/appTheme"
        android:name="com.oasdk.base.AppContext"
       >
        <activity android:name="com.oasdk.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.oaui.view.attachment.VideoRecordActivity"
                  android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustPan"/>


        <activity android:name="com.oasdk.http.HttpDemoActivity" />
        <activity android:name="com.oasdk.ui.UIDemoAct" />
        <activity android:name="com.oasdk.ui.FormDemoAct" />
        <activity android:name="com.oasdk.ui.TipLayoutDemoAct" />
        <activity android:name="com.oasdk.ui.DialogDemoAct"
                  android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustPan"/>
        <activity android:name="com.oasdk.ui.DataDemoAct"
                  android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustPan"/>
        <activity android:name="com.oasdk.ui.RecordDemoAct"
                  android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustPan"/>
        <activity android:name="com.oasdk.ui.UIDatalistDemoAct"
                  android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustPan"/>
        <activity android:name="com.oasdk.ui.BaseViewDemoAct"
                  android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustPan"/>


    </application>



</manifest>