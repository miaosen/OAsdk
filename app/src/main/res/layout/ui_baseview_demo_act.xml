<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <cn.oaui.view.HeaderView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="基础控件"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
    >


        <cn.oaui.view.attachment.AttachmentView
            android:id="@+id/attachmentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
                      android:padding="8dp"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">
            <TextView
                style="@style/tv_edit"
                android:text="名称:"
            />
            <EditText
                style="@style/ed_edit"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                style="@style/tv_edit"
                android:text="时间:"
            />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <cn.oaui.view.calendar.DateButton
                    style="@style/btn_date"
                    android:text="选择日期"/>
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

    <cn.oaui.view.TailView
        android:id="@+id/tailView"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        app:valueText="获取,填充"
    >


    </cn.oaui.view.TailView>
</LinearLayout>
